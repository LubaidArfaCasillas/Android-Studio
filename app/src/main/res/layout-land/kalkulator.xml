<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".kalkulator">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_75_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />

    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:hint="0"
        android:textSize="35sp"
        android:textAlignment="viewEnd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline_75_percent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.8"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tvDisplay"
        app:layout_constraintStart_toStartOf="@id/tvDisplay"
        app:layout_constraintEnd_toEndOf="@id/tvDisplay"
        android:background="@color/black"/>

    <Button
        android:id="@+id/btAC"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#DCD0C0"
        android:text="AC"
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toTopOf="@id/bt1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btDelete"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/btDelete"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#DCD0C0"
        android:text="Del"
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toTopOf="@+id/bt3"
        app:layout_constraintStart_toEndOf="@id/btAC"
        app:layout_constraintEnd_toStartOf="@id/btBagi"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/btBagi"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#DCD0C0"
        android:text="รท"
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toTopOf="@id/btKali"
        app:layout_constraintStart_toEndOf="@id/btDelete"
        app:layout_constraintEnd_toStartOf="@id/guideline_75_percent"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#F0F0F0"
        android:text="1"
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toTopOf="@id/bt4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bt2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#F0F0F0"
        android:text="2"
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toTopOf="@id/bt5"
        app:layout_constraintStart_toEndOf="@id/bt1"
        app:layout_constraintEnd_toStartOf="@id/bt3"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#F0F0F0"
        android:text="3"
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toTopOf="@+id/bt6"
        app:layout_constraintStart_toEndOf="@+id/bt2"
        app:layout_constraintEnd_toStartOf="@id/btKali"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/btKali"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#DCD0C0"
        android:text="x"
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toTopOf="@+id/btMin"
        app:layout_constraintStart_toEndOf="@+id/bt3"
        app:layout_constraintEnd_toStartOf="@id/guideline_75_percent"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/bt4"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#F0F0F0"
        android:text="4"
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bt5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/bt5"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#F0F0F0"
        android:text="5"
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toBottomOf="@id/bt4"
        app:layout_constraintEnd_toStartOf="@id/bt6"
        app:layout_constraintStart_toEndOf="@id/bt4"
        app:layout_constraintTop_toTopOf="@id/bt4"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/bt6"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#F0F0F0"
        android:text="6"
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toBottomOf="@id/bt4"
        app:layout_constraintEnd_toStartOf="@id/btMin"
        app:layout_constraintStart_toEndOf="@+id/bt5"
        app:layout_constraintTop_toTopOf="@id/bt4"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/btMin"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#DCD0C0"
        android:text="-"
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toBottomOf="@id/bt4"
        app:layout_constraintEnd_toStartOf="@id/guideline_75_percent"
        app:layout_constraintStart_toEndOf="@+id/bt6"
        app:layout_constraintTop_toTopOf="@id/bt4"
        app:layout_constraintHorizontal_weight="1" />


    <Button
        android:id="@+id/bt7"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#F0F0F0"
        android:text="7"
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        android:layout_margin="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt4"
        app:layout_constraintEnd_toStartOf="@id/bt8"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/bt8"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#F0F0F0"
        android:text="8"
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        android:layout_margin="4dp"
        app:layout_constraintStart_toEndOf="@+id/bt7"
        app:layout_constraintTop_toBottomOf="@+id/bt5"
        app:layout_constraintEnd_toStartOf="@id/bt9"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/bt9"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#F0F0F0"
        android:text="9"
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        android:layout_margin="4dp"
        app:layout_constraintStart_toEndOf="@+id/bt8"
        app:layout_constraintTop_toBottomOf="@+id/bt6"
        app:layout_constraintEnd_toStartOf="@id/btPlus"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/btPlus"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#DCD0C0"
        android:text="+"
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        android:layout_margin="4dp"
        app:layout_constraintEnd_toStartOf="@id/guideline_75_percent"
        app:layout_constraintStart_toEndOf="@id/bt9"
        app:layout_constraintTop_toBottomOf="@id/btMin"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/btPersen"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#DCD0C0"
        android:text="%"
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        android:layout_margin="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt7"
        app:layout_constraintEnd_toStartOf="@id/bt0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/bt0"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#F0F0F0"
        android:text="0"
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        android:layout_margin="4dp"
        app:layout_constraintStart_toEndOf="@id/btPersen"
        app:layout_constraintTop_toBottomOf="@id/bt8"
        app:layout_constraintEnd_toStartOf="@id/btKoma"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/btKoma"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#DCD0C0"
        android:text="."
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        android:layout_margin="4dp"
        app:layout_constraintStart_toEndOf="@id/bt0"
        app:layout_constraintTop_toBottomOf="@id/bt9"
        app:layout_constraintEnd_toStartOf="@id/btSamaDengan"
        app:layout_constraintHorizontal_weight="1" />

    <Button
        android:id="@+id/btSamaDengan"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#FF9800"
        android:text="="
        android:textColor="@color/black"
        app:cornerRadius="16dp"
        android:layout_margin="4dp"
        app:layout_constraintStart_toEndOf="@id/btKoma"
        app:layout_constraintTop_toBottomOf="@id/btPlus"
        app:layout_constraintEnd_toStartOf="@id/guideline_75_percent"
        app:layout_constraintHorizontal_weight="1" />

</androidx.constraintlayout.widget.ConstraintLayout>