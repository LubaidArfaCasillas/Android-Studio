<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardActivity"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/gunung"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="1000011dp"/>
        <TextView
            android:id="@+id/Judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiket Pendakian"
            android:textStyle="bold"
            android:textSize="30dp"
            android:fontFamily="monospace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Logo"
            android:layout_marginTop="15dp"/>

        <!--    Card Parent 1-->
        <androidx.cardview.widget.CardView
            android:id="@+id/MenuUtamaCard"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/Judul"
            android:backgroundTint="#F5F5DC">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/textmenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Menu Utama"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvBeranda"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    app:layout_constraintTop_toBottomOf="@id/textmenu"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cvBantuan"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="#FFC107">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/HomePic"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/beranda"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/homeText1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beranda"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/HomePic" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvBantuan"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    app:layout_constraintTop_toBottomOf="@id/textmenu"
                    app:layout_constraintStart_toEndOf="@id/cvBeranda"
                    app:layout_constraintEnd_toStartOf="@id/cvPegawai"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="#FFC107">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/Logoss"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/bantuan"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:id="@+id/homeText2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pusat Bantuan"
                            app:layout_constraintTop_toBottomOf="@id/Logoss"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPegawai"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    app:layout_constraintTop_toBottomOf="@id/textmenu"
                    app:layout_constraintStart_toEndOf="@id/cvBantuan"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="#FFC107">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/HomePic3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/pegawai"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:id="@+id/homeText3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pegawai"
                            app:layout_constraintTop_toBottomOf="@id/HomePic3"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card Parent 2-->
        <androidx.cardview.widget.CardView
            android:id="@+id/MenuKeduaCards"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/MenuUtamaCard"
            android:backgroundTint="#F5F5DC">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/textmenu2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Menu lain"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvSurvei"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    app:layout_constraintTop_toBottomOf="@id/textmenu2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cvGaleri"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="#FFC107">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/HomePic4"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/survei"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:id="@+id/homeText5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Survei"
                            app:layout_constraintTop_toBottomOf="@id/HomePic4"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvGaleri"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    app:layout_constraintTop_toBottomOf="@id/textmenu2"
                    app:layout_constraintStart_toEndOf="@id/cvSurvei"
                    app:layout_constraintEnd_toStartOf="@+id/cvKeluar"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="#FFC107">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="79dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/Logosss"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/galeri"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/homeText4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Galeri"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/Logosss" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvKeluar"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    app:layout_constraintTop_toBottomOf="@id/textmenu2"
                    app:layout_constraintStart_toEndOf="@id/cvGaleri"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="#FFC107">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/Logossss"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/keluar"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/homeText6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Keluar"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/Logossss" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
